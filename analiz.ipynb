import pandas as pd
import matplotlib.pyplot as plt

# --- ADIM 3: VERİ YÜKLEME VE HAZIRLIK ---

# 1. Dosyaları yükleyelim
df_basket = pd.read_csv("basket_details.csv")
df_customer = pd.read_csv("customer_details.csv")

# 2. Tarih sütununu 'datetime' formatına dönüştürelim
df_basket['basket_date'] = pd.to_datetime(df_basket['basket_date'])
print("Adım 3: Veriler yüklendi ve 'basket_date' dönüştürüldü.")


# --- ADIM 4: EDA HESAPLAMALARI ---

# 4.A: Aylık Satışları Hesapla
df_aylik_satis = df_basket.set_index('basket_date').resample('M')['basket_count'].sum()
print("Adım 4.A: 'df_aylik_satis' hesaplandı.")

# 4.B: Popüler Ürünleri Hesapla
df_populer_urunler = df_basket.groupby('product_id')['basket_count'].sum().sort_values(ascending=False)
print("Adım 4.B: 'df_populer_urunler' hesaplandı.")

# 4.C: Müşteri Verisini Temizle ve Birleştir
df_customer_clean = df_customer[(df_customer['customer_age'] >= 18) & (df_customer['customer_age'] <= 100)]
df_merged = pd.merge(df_basket, df_customer_clean, on='customer_id', how='inner')
print("Adım 4.C: Veriler temizlendi ve 'df_merged' oluşturuldu.")

# 4.D: Cinsiyete Göre Satışları Hesapla
sales_by_sex = df_merged.groupby('sex')['basket_count'].sum().sort_values(ascending=False)
print("Adım 4.D: 'sales_by_sex' hesaplandı.")

# 4.E: Yaş Gruplarına Göre Satışları Hesapla
bins = [18, 26, 36, 46, 56, 66, 101] 
labels = ['18-25', '26-35', '36-45', '46-55', '56-65', '66-100']
df_merged['age_group'] = pd.cut(df_merged['customer_age'], bins=bins, labels=labels, right=False)
sales_by_age_group = df_merged.groupby('age_group')['basket_count'].sum().sort_values(ascending=False)
print("Adım 4.E: 'sales_by_age_group' hesaplandı.")


# --- ADIM 5: VERİ GÖRSELLEŞTİRME ---
print("\nAdım 5: Grafikler oluşturuluyor...")

# Grafik 1: Aylık Satış Trendi
plt.figure(figsize=(12, 6))
plt.plot(df_aylik_satis.index, df_aylik_satis.values, marker='o', linestyle='-')
plt.title('Aylara Göre Toplam Satış Adedi (Trend)')
plt.xlabel('Ay')
plt.ylabel('Toplam Satış Adedi')
plt.grid(True)
plt.show()

# Grafik 2: Yaş Gruplarına Göre Satış
plt.figure(figsize=(10, 6))
sales_by_age_group.plot(kind='bar', color='skyblue')
plt.title('Yaş Gruplarına Göre Toplam Satış Adedi')
plt.xlabel('Yaş Grubu')
plt.ylabel('Toplam Satış Adedi')
plt.xticks(rotation=0) 
plt.grid(axis='y', linestyle='--')
plt.show()

# Grafik 3: Cinsiyete Göre Satış Dağılımı
plt.figure(figsize=(8, 8))
plt.pie(sales_by_sex, labels=sales_by_sex.index, autopct='%1.1f%%', startangle=90, colors=['lightblue', 'lightcoral'])
plt.title('Cinsiyete Göre Toplam Satış Dağılımı (%)')
plt.axis('equal') 
plt.show()

print("Tüm işlemler tamamlandı.")
